@using System.Web.Optimization;
@using Kory.Tools.MVC.Controllers;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale 1.0" />
        
        <link href="@Styles.Url("~/Content/jquery/css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/datatables/css")" rel="stylesheet" />
        <link href="@Styles.Url("~/content/timepicker")" rel="stylesheet" />
        <link href="@Styles.Url("~/content/bootstrap")" rel="stylesheet" />

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/knockout")
        @Scripts.Render("~/bundles/jqueryui")

        
        @*<link href="http://cdn.wijmo.com/jquery.wijmo-complete.all.2.3.1.min.css" rel="stylesheet"/>*@
        <!--Wijmo Widgets CSS-->
        <link href="http://cdn.wijmo.com/jquery.wijmo-pro.all.3.20131.2.min.css" rel="stylesheet" type="text/css" />

        <!--Wijmo Widgets JavaScript-->
        <script src="http://cdn.wijmo.com/jquery.wijmo-open.all.3.20131.2.min.js" type="text/javascript"></script>
        <script src="http://cdn.wijmo.com/jquery.wijmo-pro.all.3.20131.2.min.js" type="text/javascript"></script>
        <!--Wijmo Knockout Integration Library-->
        <script src="http://cdn.wijmo.com/interop/knockout.wijmo.3.20131.2.js" type="text/javascript"></script>

        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/timepicker")
        @Scripts.Render("~/bundles/bootstrap")

        <link href="~/Content/themes/aristo/jquery-wijmo.css" rel="stylesheet" />

    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="@Url.Action("Index", "Home", new {Area = ""})">
                        <img class="" src="/Content/images/Referees.jpg" style="padding-right: 30px" alt="Empire" height="175px" width="260" />
                        Kory's Web Tools
                        @if (System.Environment.MachineName == "KORY-PC")
                        {
                            <span class="ui-state-error-text"> - DEV MODE!!!</span>
                        }
                    </a>
                    <div id="logindisplay" class="navbar-text pull right">
                        Welcome <strong>@User.Identity.Name</strong>!
                    </div>
                </div>
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div>
                        @Html.Partial("_KoryToolsMenuBootstrap")
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
    </body>
</html>

<style>
    body {
            padding-top: 100px;
            padding-bottom: 40px;
    }

  
    .navbar-inverse .navbar-inner {
            background-color: #696969;
            background-image: linear-gradient(to bottom,#333,#111);
    } 

    .table-hover tbody tr:hover > td,
    .table-hover tbody tr:hover > th {
            background-color: #85b2cb;
    }  

    .hero-unit {
            padding: 30px;
            margin-bottom: 30px;
            font-size: 18px;
            font-weight: 200;
            line-height: 30px;
            color: inherit;
            background-color: #eee;
            -webkit-border-radius: 6px;
            -moz-border-radius: 6px;
            border-radius: 6px;
    }  

    .bold {
            font-weight: bold;
    } 

    /* Styles for validation helpers

-----------------------------------------------------------*/

.field-validation-error {
    color: #b94a48;
    display: inline-block;
    *display: inline;
    padding-left: 5px;
    vertical-align: middle;
    *zoom: 1;
}

.field-validation-valid {
    display: none;
}

.input-validation-error {
    border: 1px solid #ff0000;
    background-color: #ffeeee;
}

.validation-summary-errors {
    font-weight: bold;
    color: #ff0000;
}

.validation-summary-valid {
    display: none;
}

</style>
