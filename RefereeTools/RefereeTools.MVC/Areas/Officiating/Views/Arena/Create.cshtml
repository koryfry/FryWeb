@model Kory.Tools.Data.RefereeTools.Arena

@{
    ViewBag.Title = "Create";
}

<br />

@Html.Partial("_OfficiatingMenu")

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<br />
<br />

@using (Html.BeginForm()){
    @Html.ValidationSummary(true)

    <div class="modal fade" id="arenaCreator" tabindex="-1" role="dialog" aria-labelledby="arenaCreator" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" style="width: 40%">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h3>Create Arena</h3>
                </div>
                <div class="modal-body">
                    <div class="row-fluid" style="min-height:50px">
                        <div class="controls span6" style="height:50px">
                            <label class="control-label" for="ArenaName">Arena Name</label>
                            <br />
                            <div style="border-color:black">
                                @Html.TextBoxFor(model => model.ArenaName, htmlAttributes: new { id = "ArenaName", @class = "form-control", style = "width: 300px;" })
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="row-fluid" style="min-height:50px">
                        <div class="controls span6" style="height:50px">
                            <label class="control-label" for="ArenaAddressLine1">Address Line 1</label>
                            <br />
                            <div>
                                @Html.TextBoxFor(model => model.AddressLine1, htmlAttributes: new { id = "AddressLine1", @class = "form-control", style = "width: 450px;" })
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="row-fluid" style="min-height:50px">
                        <div class="controls span6" style="height:50px">
                            <table style="background-color:white">
                                <thead>
                                    <tr>
                                        <td style="float:left">
                                            <label class="control-label" for="ArenaAddressLine2">Address Line 2</label>
                                        </td>
                                        <td style="width:40px"></td>
                                        <td style="width:40px"></td>
                                        <td style="float:right">
                                            <label class="control-label" for="ArenaAddressLine3">Address Line 3</label>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="float:left">
                                            @Html.TextBoxFor(model => model.AddressLine2, htmlAttributes: new { id = "AddressLine2", @class = "form-control", style = "width: 100px"})
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td style="float:right">
                                            @Html.TextBoxFor(model => model.AddressLine3, htmlAttributes: new { id = "AddressLine3", @class = "form-control", style = "width: 100px;" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <br />
           
                    <div class="row-fluid" style="min-height:50px">
                        <div class="controls span6" style="height:50px">
                            <table style="background-color:white">
                                <thead>
                                    <tr>
                                        <td style="float:left">
                                            <label class="control-label" for="ArenaCity">City</label>
                                        </td>
                                        <td style="width:100px"></td>
                                        <td style="width:100px"></td>
                                        <td style="padding-left:40px">
                                            <label class="control-label" for="ArenaCity">State</label>
                                        </td>
                                        <td style="width:75px"></td>
                                        <td style="width:75px"></td>
                                        <td style="padding-left:40px">
                                            <label class="control-label" for="ArenaCity">Zipcode</label>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="float:left">
                                            @Html.TextBoxFor(model => model.City, htmlAttributes: new { id = "City", @class = "form-control", style = "width: 300px;" })
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td style="padding-left:40px"> 
                                            @Html.TextBoxFor(model => model.State, htmlAttributes: new { id = "State", @class = "form-control", style = "width: 75px;" })
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td style="padding-left:40px"> 
                                            @Html.TextBoxFor(model => model.Zipcode, htmlAttributes: new { id = "Zipcode", @class = "form-control", style = "width: 100px;" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <br />

                    <div class="row-fluid" style="min-height:50px">
                        <div class="controls span6" style="height:50px">
                            <label class="control-label" for="ArenaCity">Phone Number</label>
                            <br />
                            <div>
                                @Html.TextBoxFor(model => model.PhoneNumber, htmlAttributes: new { id = "PhoneNumber", @class = "form-control", style = "width: 150px;" })
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <a class="btn" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "Arena")'">Close</a>
                    <input type="submit" value="Create" class="btn primary-override" />
                </div>
            </div>
        </div>
    </div> 
    
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />    
}    

<div>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Index","Arena")'"><span class="glyphicon glyphicon-home"></span> Back to List</button>
</div>  

<script type="text/javascript">
    $(document).ready(function () {
        $('#arenaCreator').modal('show')
    });
</script>


