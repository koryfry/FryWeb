@model Kory.Tools.Data.RefereeTools.Arena

@{
    ViewBag.Title = "Arena Details";
}

<h2>Details</h2>

<br />
<br />

<div class="modal fade" id="arenaDetails" tabindex="-1" role="dialog" aria-labelledby="arenaDetails" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width: 40%">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Arena Details</h3>
            </div>
            <div class="modal-body">
                <div class="span6" style="height:200px">
                    <div class="well-min" style="height: 200px">
                        <div class="well-lg" style="height: 200px">
                            <div class="row-fluid margin-top-25">
                                <div class="span4Other">
                                    <div class="display-block bold">Arena Number</div>
                                    <div class="display-field">
                                        @Html.DisplayFor(model => model.ArenaKey)
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="display-block bold">Arena Name</div>
                                    <div class="display-field">
                                        @Html.DisplayFor(model => model.ArenaName)
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid margin-top-25">
                            <div class="span4Other">
                                <div class="display-block bold">Address</div>
                                <div class="display-field">
                                    @Html.DisplayFor(model => model.AddressLine1)
                                    @if(Model.AddressLine2 != "")
                                    {
                                        if(Model.AddressLine3 == "")
                                        {
                                            @Html.DisplayFor(model => model.AddressLine2)
                                            <br/>
                                            @Html.DisplayFor(model => model.City) 
                                            @(", ")
                                            @Html.DisplayFor(model => model.State) 
                                            @(" ")
                                            @Html.DisplayFor(model => model.Zipcode)
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.AddressLine2) 
                                            @Html.DisplayFor(model => model.AddressLine3)
                                            <br/>
                                            @Html.DisplayFor(model => model.City) 
                                            @(", ")
                                            @Html.DisplayFor(model => model.State) 
                                            @(" ") 
                                            @Html.DisplayFor(model => model.Zipcode)
                                        }
                                    }
                                    else
                                    {
                                        <br/>
                                        @Html.DisplayFor(model => model.City) 
                                        @(", ")
                                        @Html.DisplayFor(model => model.State) 
                                        @(" ") 
                                        @Html.DisplayFor(model => model.Zipcode)
                                    }    
                                    <br/>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="display-block bold">Phone Number</div>
                                <div class="display-field">
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn" data-dismiss="modal"">Close</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#arenaDetails').modal('show')
    });
</script>