@model Kory.Tools.Data.RefereeTools.AgeGroup

@{
    ViewBag.Title = "Create";
}

<br />

@Html.Partial("_OfficiatingMenu")

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<br />
<br />

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true)
    
    <div class="modal fade" id="ageGroupCreator" tabindex="-1" role="dialog" aria-labelledby="ageGroupCreator" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width: 40%">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Create Age Group</h3>
            </div>
            <div class="modal-body">
                <div class="row-fluid" style="min-height:50px">
                    <div class="controls span6" style="height:50px">
                        <label class="control-label" for="AgeGroupName">Age Group Name</label>
                        <br />
                        <div style="border-color:black">
                            @Html.TextBoxFor(model => model.GroupName, htmlAttributes: new { id = "AgeGroupName", @class = "form-control", style = "width: 300px;" })
                        </div>
                    </div>
                </div>

                <br />

                <div class="row-fluid" style="min-height:50px">
                    <div class="controls span6" style="height:50px">
                        <label class="control-label" for="AgeGroupTier">Age Group Tier</label>
                        <br />
                        <div style="border-color:black">
                            @Html.TextBoxFor(model => model.GroupTier, htmlAttributes: new { id = "AgeGroupTier", @class = "form-control", style = "width: 50px;" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "AgeGroup")'">Close</a>
                <input type="submit" value="Create" class="btn primary-override" />
                @*<a href="#" class="btn btn-success">Create</a>*@
            </div>
        </div>
    </div>
    </div> 
    
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br /> 
}

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Index","AgeGroup")'"><span class="glyphicon glyphicon-home"></span> Back to List</button>
</p>

<script type="text/javascript">
    $(document).ready(function () {
        $('#ageGroupCreator').modal('show')
    });
</script>



