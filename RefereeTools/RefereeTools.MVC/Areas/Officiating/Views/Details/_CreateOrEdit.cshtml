<script type="text/javascript" src="~/Scripts/jquery.timepicker.js"></script>
@*<link rel="stylesheet" href="~/Areas/Officiating/Views/Shared/bootstrap-override.css" />*@

<div class="span6">
    <div class="well well-lg">
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Date Of Game</div>
                <div class="input-group">
                    <input type="text" id="gameDate" class="form-control" placeholder="Game Date" />	
                    <span class="input-group-addon" id="btnCalendar" style="cursor:pointer;">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="span3">
                <div class="display-block bold">Game Time</div>
                <div>
                    <input type="text" class="form-control" data-time-format="H:i:s" id="gameTime" />
                </div>
            </div>
            <div class="span3">
                <div class="display-block bold">Ref or Line</div>
                <div class="btn-group">
                    <button type="button" class="btn-small  btn-default" id="btnRef">Ref</button>
                    <button type="button" class="btn-small  btn-default" id="btnLine">Line</button>
                </div>
            </div>
        </div>
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Arena Name</div>
                <div>
                    <input type="text" class="form-control" id = "ArenaName" />
                </div>
            </div>
            <div class="span3">
                <div class="display-block bold">Dist Traveled</div>
                <div>
                    <input type="text" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Age Group Name</div>
                <div>
                    <input type="text" class="form-control" id = "AgeGroupName" />
                </div>
            </div>
            <div class="span3">
                <div class="display-block bold">Age Group Tier</div>
                <div>
                    <input type="text" class="form-control" id = "AgeGroupTier"/>
                </div>
            </div>
        </div>
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Partner(s)</div>
                <div>
                    <input type="text" class="form-control" id = "OfficialsName" />
                </div>
            </div>
            <div class="span3">
                <div class="display-block bold">Rate Of Pay</div>
                <div class="input-group">
                    <input type="text" class="form-control" />	
                </div>
            </div>
        </div>
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Misc Expense</div>
                <div>
                    <input type="text" class="form-control" style="width:100px" data-format-string="{0:C0}" placeholder="0.00"/>
                </div>
            </div>
            <div class="span4">
                <div class="display-block bold">Date Paid</div>
                <div class="input-group">
                    <input type="text" id="datePaid" class="form-control" placeholder="Select Date Paid" />	
                    <span class="input-group-addon" id="btnCalendarDatePaid" style="cursor:pointer;">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="row-fluid margin-top-25">
            <div class="span4">
                <div class="display-block bold">Amount Paid</div>
                <div>
                    <input type="text" class="form-control" style="width:100px" data-format-string="{0:C0}" placeholder="0.00"/>
                </div>
            </div>
        </div>
    </div>
</div>


