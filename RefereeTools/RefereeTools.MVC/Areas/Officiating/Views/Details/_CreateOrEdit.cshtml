<script type="text/javascript">
    $(document).ready(function () {
        
        $("#gameTime").timepicker({
            'minTime': '7:00 am',
            'maxTime': '9:20 pm',
            'step': 10
        });
    });

    $('#btnCalendar').click(function () {
        //alert('clcikec');
        $(document).ready(function () {
            $("#gameDate").datepicker().focus();
        });
    });

    $('#btnCalendarDatePaid').click(function () {
        //alert('clcikec');
        $(document).ready(function () {
            $("#datePaid").datepicker().focus();
        });
    });

    $("#gameTime").timepicker({
        'minTime': '7:00 am',
        'maxTime': '9:20 pm',
        'step': 10
    });

    $("#datePaid").datepicker();
    
    $(function () {
        $("#ArenaName").autocomplete({
            minLength : 4,
            source: '/Autocomplete/GetAllArenas' 
        });
    });

    $(function () {
        $("#AgeGroupName").autocomplete({
            minLength: 4,
            source: '/Autocomplete/GetAllAgeGroupNames'
        });
    });

    $(function () {
        $("#AgeGroupTier").autocomplete({
            minLength: 1,
            source: '/Autocomplete/GetAllAgeGroupTiers'
        });
    });

    $(function () {
        $("#OfficialsName").autocomplete({
            minLength: 4,
            source: '/Autocomplete/GetAllOfficials'
        });
    });

    $('#btnRef').click(function () {
        $(this).removeClass('btn-default');
        $(this).addClass('primary-override');

        $('#btnLine').removeClass('primary-override');
        $('#btnLine').addClass('btn-default');

    });

    $('#btnLine').click(function () {
        $(this).removeClass('btn-default');
        $(this).addClass('primary-override');

        $('#btnRef').removeClass('primary-override');
        $('#btnRef').addClass('btn-default');
    });

   
</script>

